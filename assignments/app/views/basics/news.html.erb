<div class = "row">
    <div class="col-md-6"> 
        <h3>The kathmandu Post News</h3>
        <% @ktm_news.each do |news| %>
            <div>
                <a href=<%= news[:link] %>><h3><%= news[:header] %></h3></a>
                <img src=<%= news[:image]%> alt="image">
                <p><%= news[:content]%></p>
            </div>
        <% end %>
    </div>
    <div class="col-md-6"> 
        <h3>The New York Times News</h3>
        
    </div>
</div>
