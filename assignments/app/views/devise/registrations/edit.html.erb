<div class="flex-center">
  <div class="container">
    <div class="row">
      <div class="col-md-4 offset-md-4">
        <div class="card session--form">
          <div class="card-body">
            <h2 class="card-title" style="padding-left:0px">Edit <%= resource_name.to_s.humanize %></h2>
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>
              <div class="form-outline mb-4">
                <%= f.email_field :email, autofocus: true, autocomplete: "email",class: 'form-control' %>
                <%= f.label :email, class: 'form-label' %>
              </div>
              <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
              <% end %>
              <div class="form-outline mb-4">
                <%= f.password_field :password, autocomplete: "new-password",class: 'form-control' %>
                <% if @minimum_password_length %>
                  <%= f.label :password,"#{@minimum_password_length} characters minimum (leave blank if you don't want to change it)", class: 'form-label' %>
                <% else %>
                  <%= f.label :password, class: 'form-label' %> <i>(leave blank if you don't want to change it)</i>
                <% end %>
              </div>
              <div class="form-outline mb-4">
                <%= f.password_field :password_confirmation, autocomplete: "new-password",class: 'form-control' %>
                <%= f.label :password_confirmation, class: 'form-label' %>
              </div>
              <div class="form-outline mb-4">
                <%= f.password_field :current_password, autocomplete: "current-password",class: 'form-control' %>
                <%= f.label :current_password,"Current password (we need your current password to confirm your changes)", class: 'form-label' %>
              </div>
              <div class="actions mb-4">
                <%= f.submit "Update", class: 'btn btn-su filled btn-block' %>
              </div>
            <% end %>
            <h3>Cancel my account</h3>
            <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: 'btn btn-su filled btn-block' %></p>
            <%= link_to "Back", :back %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
