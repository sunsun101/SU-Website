<div class="flex-center">
  <div class="container">
    <div class="row">
      <div class="col-md-4 offset-md-4">
        <div class="card session--form">
          <div class="card-body">
            <h2 class="card-title" style="padding-left:0px">Change your password</h2>
            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>
              <%= f.hidden_field :reset_password_token %>
              <div class="form-outline mb-4">
                <%= f.password_field :password, autofocus: true, autocomplete: "new-password",class: 'form-control' %>
                <% if @minimum_password_length %>
                  <%= f.label :password, "New password (#{@minimum_password_length} characters minimum)" , class: 'form-label' %>
                <% else %>
                  <%= f.label :password,"New password", class: 'form-label' %>
                <% end %>
              </div>
              <div class="form-outline mb-4">
                <%= f.password_field :password_confirmation, autocomplete: "new-password",class: 'form-control' %>
                <%= f.label :password_confirmation, "Confirm new password", class: 'form-label' %>
              </div>
              <div class="actions">
                <%= f.submit "Change my password", class: 'btn btn-su filled btn-block' %>
              </div>
            <% end %>
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
