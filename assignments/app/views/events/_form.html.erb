<%= form_with(model: event, url: events_path) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>
      <ul>
        <% event.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="col-md-6">
      <%= form.label :title, class: 'form-label' %>
      <div class="form-outline mb-4">
        <%= form.text_field :title, class: 'form-control' %>
      </div>
    </div>
    <div class="col-md-6">
      <%= form.label :event_date, class: 'form-label' %>
      <div class="form-outline mb-4">
        <%= form.datetime_local_field  :event_date, class: 'form-control' %>
      </div>
    </div>
  </div>
  <div class="form-outline mb-4">
    <%= form.text_area :description, class: 'form-control', rows: '6' %>
    <%= form.label :description, class: 'form-label' %>
  </div>
  <div class = "row col-12">
    <%= form.label :add_pictures, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-8">
      <%= form.file_field :pictures, id: "uploaded-pictures", class:"form-control", multiple: true, accept: "image/*" %>
    </div>
    <div class = "col-sm-2">
      <button id= "removeImage" type="button" class="btn btn-danger" style="display:none;" >Remove</button>
    </div>
  </div>
  <div class="preview"></div>
  <div class="modal-footer">
    <%= form.submit 'Submit', class: 'btn btn-primary mb-4' %>
    <input type="button" id="redirect" value="show alert" />
  </div>
<% end %>
<script>
$("#redirect").click(function(){
  alert("Jquery working");
});
  $(function () {
    // Multiple images preview in browser
    var imagesPreview = function (input, placeToInsertImagePreview) {
      console.log("inside image preview");
      const btn1 = document.getElementById("removeImage");
      $(placeToInsertImagePreview).html("");
      if (input.files) {
        var filesAmount = input.files.length;
  
        if (filesAmount > 0) {
          for (i = 0; i < filesAmount; i++) {
            var reader = new FileReader();
            var id = $(input.files[i]).attr("id");
            reader.onload = function (event) {
              $($.parseHTML('<img class = "contact-img">'))
                .attr("src", event.target.result)
                .appendTo(placeToInsertImagePreview);
            };
  
            reader.readAsDataURL(input.files[i]);
          }
          btn1.style.display = "block";
        } else {
          $(placeToInsertImagePreview).html("");
          btn1.style.display = "none";
        }
      }
    };
  
    $("#uploaded-pictures").on("change", function () {
      console.log("inside on change");
      imagesPreview(this, "div.preview");
    });
    $("#removeImage").click(function (e) {
      e.preventDefault(); // prevent default action of link
      this.files = [];
      $("#uploaded-pictures").val(""); // clear image input value
      imagesPreview(this, "div.preview");
    });
  });
</script>
