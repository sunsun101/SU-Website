<div class="row">
  <% if flash.any?%>
    <%= render 'layouts/alerts'%>
  <% end %>
  <% if @events.present? %>
    <section class="" id="meetings">
      <div class="container">
        <div class="row">
          <div class="col-lg-12">
            <div class="row">
              <% @events.each do |event| %>
                <div class="col-lg-4">
                  <div class="meeting-item" id='<%= event.id%>'>
                    <div class="thumb">
                      <%= link_to  event_detail_path do%>
                        <% if event.pictures.attached? %>
                          <%= image_tag(event.pictures[0], alt: "event_image", class: 'img-fluid') %>
                        <%end%>
                      <% end %>
                    </div>
                    <div class="down-content">
                      <div class="date">
                        <h6><%= event&.event_date&.strftime("%b") %> <span><%= event&.event_date&.strftime("%d") %></span> </h6>
                      </div>
                      <a href="meeting-details.html">
                        <h4><%= event.title %></h4>
                      </a>
                      <p style="width:inherit ; white-space: nowrap; overflow: hidden; text-overflow:ellipsis;" > <%= event.description %> </p>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </section>
  <% end %>
